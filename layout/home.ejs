<%
    // get all top posts.
    let topPosts = [];
    site.posts.forEach(function (post) {
        if (post.top) {
            topPosts.push(post);
        }
    });
    let topPostsCount = topPosts.length;
%>

<% if (topPostsCount > 0) { %>
<%
    const hashCode = function (str) {
        if (!str && str.length === 0) {
            return 0;
        }

        let hash = 0;
        for (let i = 0, len = str.length; i < len; i++) {
            hash = ((hash << 5) - hash) + str.charCodeAt(i);
            hash |= 0;
        }
        return hash;
    };

    let featureImages = theme.featureImages;
    let imgCount = featureImages.length;
    let bgColorArr = [
            'linear-gradient(to right, #FF5E3A 0%, #FF2A68 100%)',
            'linear-gradient(to right, #EF4DB6 0%, #C643FC 100%)',
            'linear-gradient(to right, #1AD6FD 0%, #1D62F0 100%)',
            'linear-gradient(to right, #FFCC00 0%, #FF9500 100%)',
            'linear-gradient(to right, #4cbf30 0%, #0f9d58 100%)',
            'linear-gradient(to right, #C644FC 0%, #5856D6 100%)',
            'linear-gradient(to right, #55EFCB 0%, #5BCAFF 100%)'];
    let colorCount = bgColorArr.length;
%>
<div class="container home">
    <div class="card">
        <div class="card-content">

            <div class="row">
                <% page.posts.forEach((post, index) => { %>
                <%
                    let featureImg = post.img ? post.img : featureImages[Math.abs(hashCode(post.title) % imgCount)];
                    let bgColor = bgColorArr[index % colorCount];
                %>
                <div class="col s12 m12" <% if (index > 1) { %>data-aos="zoom-in-up"<% } %>>
                    <div class="post-card" style="background-image: url('<%- featureImg %>')">
                        <div class="post-body">
                            <div class="post-categories">
                                <% post.categories.forEach(category => { %>
                                <a href="<%- url_for(category.path) %>" class="category" target="_blank"><%- category.name %></a>
                                <% }); %>
                            </div>
                            <a href="<%- url_for(post.path) %>" target="_blank">
                                <h3 class="post-title"><%- post.title %></h3>
                            </a>
                            <p class="post-description"><%- strip_html(post.content).substring(0, 60) %></p>
                            <a href="<%- url_for(post.path) %>" target="_blank"
                                    class="read-more btn waves-effect waves-light" style="background: <%- bgColor %>">
                                <i class="icon fa fa-eye fa-fw"></i><%- __('readMore') %>
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<% } %>
